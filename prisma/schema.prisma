generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Team {
  id          Int      @id @default(autoincrement())
  profileImage String   // Gambar Profile
  name         String   // Nama
  major        String   // Jurusan
  teamDivision String   // Tim / Devisi
  status       String   // Status (Aktif / Tidak Aktif)
}

model Event {
  id        String   @id @default(uuid())
  title     String
  startDate DateTime
  endDate   DateTime
  level     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Transaction {
  id          Int      @id @default(autoincrement())
  type        String   @db.VarChar(20)
  amount      Float
  description String   @db.VarChar(255)
  date        DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Note {
  title     String
  content   String
  archived  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  id        Int      @id @default(autoincrement())
}


model PodcastProgram {
  id          Int      @id @default(autoincrement())
  title       String   // Nama program podcast
  schedule    DateTime // Jadwal tanggal dan jam
  host        String   // Nama host
  source      String   // Nama sumber
  createdAt   DateTime @default(now()) // Waktu dibuat
  updatedAt   DateTime @updatedAt // Waktu terakhir diupdate
}